<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
<TextView
        android:id="@+id/checkTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:text="Check-In Questionnaire"
        android:textAlignment="center"
        android:textColor="@color/taupe"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/sleepQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:text="Did you get enough sleep last night? (6-8hours)"
        android:textColor="@color/blueBlack"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        tools:layout_editor_absoluteX="0dp" />

    <RadioGroup
        android:id="@+id/slepRadioButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/sleepYes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Yes" />

        <RadioButton
            android:id="@+id/sleepNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="No" />
    </RadioGroup>

    <TextView
        android:id="@+id/feelQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_weight="5"
        android:text="I am Feeling..."
        android:textColor="@color/blueBlack"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="0dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/seekBarTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="0"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold" />

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:indeterminate="false"
            android:max="100"
            tools:layout_editor_absoluteY="227dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/affirmQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:text="Did you recite your daily affirmations?"
        android:textColor="@color/blueBlack"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        tools:layout_editor_absoluteX="0dp" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/affrimYes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Yes" />

        <RadioButton
            android:id="@+id/affrimNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="No" />
    </RadioGroup>

    <TextView
        android:id="@+id/focusQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:text="Did you find it difficult to focus certain tasks?"
        android:textColor="@color/blueBlack"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        tools:layout_editor_absoluteX="0dp" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/focusYes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Yes" />

        <RadioButton
            android:id="@+id/focusNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="No" />
    </RadioGroup>

    <TextView
        android:id="@+id/activityQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:text="Did you partake in physical activity today?"
        android:textColor="@color/blueBlack"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        tools:layout_editor_absoluteX="0dp" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/activityYes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Yes" />

        <RadioButton
            android:id="@+id/activityNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="No" />
    </RadioGroup>

    <Button
        android:id="@+id/resultsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:text="Send Results" />

</LinearLayout>