<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Counselor View">

        <SwitchPreferenceCompat
            android:id="@+id/recyclerLayoutChange"
            app:defaultValue="false"
            app:key="grid_view"
            app:title="Grid Layout" />


    </PreferenceCategory>
    <PreferenceCategory android:title="Font Sizing">
        <ListPreference
            android:defaultValue="16"
            android:entries="@array/font_size_menu"
            android:entryValues="@array/font_size_value"
            app:key="font_size"
            app:useSimpleSummaryProvider="true"
            android:title="Font Size"
            app:summary="Please select a preferred font size"/>
    </PreferenceCategory>
    <PreferenceCategory android:title="Notifictaion">

        <SwitchPreference
            android:defaultValue="true"
            android:key="switch_notification"
            android:title="Daily Check In Notification" />
    </PreferenceCategory>

</PreferenceScreen>